{% extends "layout.twig" %}
{% block title %} Thoth - New Project {% endblock %}
{% block content %}
<section class="py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white text-center">
                        <h2 class="fw-bold mb-0"><i class="fas fa-plus-circle me-2"></i>New Project</h2>
                    </div>
                    <div class="card-body p-4">
                        <form action="{{ site_url('Project_Controller/created_project') }}" method="post" class="form-new-project">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" name="title" class="form-control form-control-lg" id="title" placeholder="Enter title" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" class="form-control form-control-lg min-height" id="description" placeholder="Description" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="objectives" class="form-label">Objectives</label>
                                <textarea name="objectives" class="form-control form-control-lg min-height" id="objectives" placeholder="Objectives" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="protocol" class="form-label">Copy Planning</label>
                                <select id="protocol" name="protocol" class="form-select form-select-lg">
                                    <option value=""></option>
                                    {% for p in projects %}
                                        <option value="{{ p.get_id }}">{{ p.get_title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <h5 class="mb-2">Comments</h5>
                                <p class="mb-0">For the creation of the project it is recommended that the user be a researcher and not a reviewer or other role, because once created, your administrator role cannot be changed or passed on.</p>
                            </div>
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-success btn-lg">Create Project</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
