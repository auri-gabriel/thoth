<div class="project-card-header">
	<div class="project-header-title-wrap">
		<h4 class="project-title" aria-label="Project Title">
			{{ project.get_title|e }}
		</h4>
		<input type="hidden" id="id_project" value="{{ project.get_id }}">
	</div>
	{% set is_owner = is_owner is defined ? is_owner : (session.level == '4') %}
	<nav
		class="project-stages-nav" aria-label="Project stages navigation">
		<!-- Overview -->
		<a href="{{ site_url('projects/' ~ project.get_id) }}" class="btn btn-sm opt {{ active_tab is defined and active_tab == 'overview' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'overview' ? 'page' : false }}">
			<i class="fas fa-binoculars me-1"></i>
			Overview
		</a>
		<span class="stage-arrow d-none d-md-inline" aria-hidden="true">&#8594;</span>
		<!-- Planning -->
		<a href="{{ site_url('projects/' ~ project.get_id ~ '/planning') }}" class="btn btn-sm opt {{ active_tab is defined and active_tab == 'planning' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'planning' ? 'page' : false }}">
			<i class="fas fa-list me-1"></i>
			Planning
		</a>
		<span class="stage-arrow d-none d-md-inline" aria-hidden="true">&#8594;</span>
		{# <!-- Conducting (only for owner) --> #}
		{% if is_owner %}
			{# <!-- for reviser --> #}
			{% if session.level == '4' %}
				<a href="{{ site_url('projects/' ~ project.get_id ~ '/study-selection-admin') }}" class="btn btn-sm opt {{ active_tab is defined and active_tab == 'conducting' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'conducting' ? 'page' : false }}">
					<i class="fas fa-play-circle me-1"></i>
					Conducting
				</a>
				{# <!-- for owner --> #}
			{% else %}
				<a href="{{ site_url('projects/' ~ project.get_id ~ '/conducting') }}" class="btn btn-sm opt {{ active_tab is defined and active_tab == 'conducting' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'conducting' ? 'page' : false }}">
					<i class="fas fa-play-circle me-1"></i>
					Conducting
				</a>
			{% endif %}
			<span class="stage-arrow d-none d-md-inline" aria-hidden="true">&#8594;</span>
		{% endif %}
		<!-- Reporting -->
		<a href="{{ site_url('projects/' ~ project.get_id ~ '/reporting') }}" class="btn btn-sm opt {{ active_tab is defined and active_tab == 'reporting' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'reporting' ? 'page' : false }}">
			<i class="fas fa-chart-line me-1"></i>
			Reporting
		</a>
		{% if project.get_planning is defined and project.get_planning() == 100 %}
			<span class="d-none d-md-inline">&nbsp;</span>
			<a href="{{ site_url('projects/' ~ project.get_id ~ '/export') }}" class="btn btn-sm opt btn-export {{ active_tab is defined and active_tab == 'export' ? 'btn-primary' : 'btn-outline-primary' }}" aria-current="{{ active_tab is defined and active_tab == 'export' ? 'page' : false }}">
				<i class="fas fa-file-download me-1"></i>
				Export
			</a>
		{% endif %}
	</nav>
</div>
