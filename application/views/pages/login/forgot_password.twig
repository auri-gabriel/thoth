{% extends "layout.twig" %}
{% block content %}
{% include '/partials/flashdata.twig'%}
<section class="py-4">
    <div class="container">
		
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-white text-center">
                        <h2 class="fw-bold mb-0">
                            <i class="fas fa-key me-2"></i>Forgot Password</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ form_open('Login_Controller/send_reset_link', {'class': 'form-forgot-password'})|raw }}
                        <div class="mb-3">
                            {{ form_label('Enter your email address', 'InputEmail', {'class': 'form-label'})|raw }}
                            {{ form_input({'name': 'email', 'id': 'InputEmail', 'class': 'form-control form-control-lg', 'type': 'email', 'placeholder': 'Email', 'required': 'required', 'autofocus': 'autofocus'}, set_value('email'))|raw }}
                            {{ form_error('email', '<div class="text-danger">', '</div>')|raw }}
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            {{ form_submit({'class': 'btn btn-primary btn-lg'}, 'Send Reset Link')|raw }}
                        </div>
                        {{ form_close()|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
