{% extends "layout.twig" %}
{% block title %} Thoth - Register {% endblock %}
{% block content %}
<section class="py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white text-center">
                        <h2 class="fw-bold mb-0"><i class="fas fa-user-plus me-2"></i>Join Thoth</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ form_open('Login_Controller/log_up', {'class': 'form-signup'})|raw }}
                            <div class="mb-3">
                                {{ form_label('Name', 'name', {'class': 'form-label'})|raw }}
                                {{ form_input({'name': 'name', 'id': 'name', 'class': 'form-control form-control-lg', 'type': 'text', 'placeholder': 'Your Name', 'required': 'required', 'autofocus': 'autofocus'}, set_value('name'))|raw }}
                                {{ form_error('name', '<div class="text-danger">', '</div>')|raw }}
                            </div>
                            <div class="mb-3">
                                {{ form_label('Email address', 'InputEmail1', {'class': 'form-label'})|raw }}
                                {{ form_input({'name': 'email', 'id': 'InputEmail1', 'class': 'form-control form-control-lg', 'type': 'email', 'placeholder': 'Enter email', 'required': 'required'}, set_value('email'))|raw }}
                                {{ form_error('email', '<div class="text-danger">', '</div>')|raw }}
                            </div>
                            <div class="mb-3">
                                {{ form_label('Password', 'InputPassword', {'class': 'form-label'})|raw }}
                                {{ form_password({'name': 'password', 'id': 'InputPassword', 'class': 'form-control form-control-lg', 'placeholder': 'Password', 'required': 'required'})|raw }}
                                {{ form_error('password', '<div class="text-danger">', '</div>')|raw }}
                            </div>
                            <div class="d-grid gap-2 mt-4">
                                {{ form_submit({'class': 'btn btn-success btn-lg'}, 'Create a new account')|raw }}
                            </div>
                            <div class="text-center mt-3">
                                <span>Already have an account?</span>
                                <a href="/login" class="btn btn-link">Sign In</a>
                            </div>
                        {{ form_close()|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
