{% extends "layout.twig" %}
{% block content %}
<section class="py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white text-center">
                        <h2 class="fw-bold mb-0">
                            <i class="fas fa-lock me-2"></i>Reset Password</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ form_open('Login_Controller/update_password', {'class': 'form-reset-password'})|raw }}
                        <input type="hidden" name="token" value="{{ token }}">
                        <div class="mb-3">
                            {{ form_label('New Password', 'InputNewPassword', {'class': 'form-label'})|raw }}
                            {{ form_password({'name': 'new_password', 'id': 'InputNewPassword', 'class': 'form-control form-control-lg', 'placeholder': 'New Password', 'required': 'required'})|raw }}
                            {{ form_error('new_password', '<div class="text-danger">', '</div>')|raw }}
                        </div>
                        <div class="mb-3">
                            {{ form_label('Confirm Password', 'InputConfirmPassword', {'class': 'form-label'})|raw }}
                            {{ form_password({'name': 'confirm_password', 'id': 'InputConfirmPassword', 'class': 'form-control form-control-lg', 'placeholder': 'Confirm Password', 'required': 'required'})|raw }}
                            {{ form_error('confirm_password', '<div class="text-danger">', '</div>')|raw }}
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            {{ form_submit({'class': 'btn btn-success btn-lg'}, 'Reset Password')|raw }}
                        </div>
                        {{ form_close()|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
