{% extends "layout.twig" %}
{% block title %} Thoth - Home {% endblock %}
{% block content %}
    <section class="py-5">
        <div class="container">
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4 p-lg-5">
                    <div class="row align-items-center g-4">
                        <div class="col-lg-8">
                            <span class="badge bg-primary-subtle text-primary mb-3">
                                <i class="fas fa-flask me-2"></i>Welcome to Thoth
                            </span>
                            <h1 class="display-5 fw-bold mb-3">Accelerate your systematic review workflow</h1>
                            <p class="lead mb-4">Thoth empowers researchers to collaborate, analyze, and publish evidence with transparency and confidence.</p>
                            <div class="d-flex flex-wrap gap-2">
                                <a href="{{ base_url('register') }}" class="btn btn-success btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>Start Free
                                </a>
                                <a href="{{ base_url('login') }}" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <h6 class="fw-semibold text-uppercase text-muted mb-3">Platform Snapshot</h6>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Projects</span>
                                        <strong>{% if data.project_count is defined %}{{ data.project_count|e }}{% else %}40+{% endif %}</strong>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>Active Users</span>
                                        <strong>{% if data.user_count is defined %}{{ data.user_count|e }}{% else %}60+{% endif %}</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6 col-xl-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold d-flex align-items-center gap-2 mb-2">
                                <i class="fas fa-question text-primary"></i>
                                Define Questions
                            </h5>
                            <p class="mb-0">Set clear research questions and objectives for your review.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold d-flex align-items-center gap-2 mb-2">
                                <i class="fas fa-database text-primary"></i>
                                Find Relevant Data
                            </h5>
                            <p class="mb-0">Search and filter studies that match your protocol and criteria.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold d-flex align-items-center gap-2 mb-2">
                                <i class="fas fa-check-double text-primary"></i>
                                Assess Quality
                            </h5>
                            <p class="mb-0">Evaluate study quality with objective, transparent assessment flows.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold d-flex align-items-center gap-2 mb-2">
                                <i class="fas fa-chart-line text-primary"></i>
                                Analyze & Report
                            </h5>
                            <p class="mb-0">Synthesize findings and generate reports for publication-ready outputs.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-lg-7">
                    <div class="card shadow-sm h-100">
                        <div class="card-header">
                            <h4 class="mb-0 fw-semibold">Why researchers choose Thoth</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-0">
                                    <strong>Collaborative by design:</strong>
                                    Manage teams, roles, and contributions in one place.
                                </li>
                                <li class="list-group-item px-0">
                                    <strong>Workflow coverage:</strong>
                                    Plan, conduct, assess, extract, and report with a consistent process.
                                </li>
                                <li class="list-group-item px-0">
                                    <strong>Open and transparent:</strong>
                                    Support reproducibility with clear project history and exports.
                                </li>
                                <li class="list-group-item px-0 border-bottom-0">
                                    <strong>Community-driven:</strong>
                                    Built and improved with researchers and contributors worldwide.
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h4 class="fw-bold mb-3">Ready to transform your research?</h4>
                            <p class="mb-4">Create an account and start building your next systematic review project with Thoth.</p>
                            <div class="d-flex flex-wrap gap-2">
                                <a href="{{ base_url('register') }}" class="btn btn-success">
                                    Create Account
                                </a>
                                <a href="{{ base_url('login') }}" class="btn btn-outline-secondary">
                                    Login
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
