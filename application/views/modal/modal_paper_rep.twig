{% extends "layouts/modal.twig" %}
{% set modal_id = "modal_paper_rep" %}
{% set modal_label_id = "exampleModalLabel" %}

{% block modal_header %}
    <input type="hidden" id="id_paper_rep">
    <h5 class="modal-title" id="paper_title_rep">Title Paper</h5>
    <small id="paper_id_rep"></small>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
{% endblock %}

{% block modal_body %}
    <input type="hidden" id="index_paper_rep">
    <div class="d-flex flex-wrap align-items-end gap-2">
        <div class="col-md-6">
            <h6>Doi</h6><a class="float-end opt"><i class="fas fa-question-circle"></i></a>
            <a target="_blank" id="paper_doi_rep"><i class="fas fa-external-link-alt"></i></a>
        </div>
        <div class="col-md-6">
            <h6>URL</h6>
            <a target="_blank" id="paper_url_rep"><i class="fas fa-external-link-alt"></i></a>
        </div>
        <div class="col-md-6">
            <h6>Author</h6>
            <p id="paper_author_rep"></p>
        </div>
        <div class="col-md-2">
            <h6>Year</h6>
            <p id="paper_year_rep"></p>
        </div>
        <div class="col-md-4">
            <h6>Database</h6>
            <p id="paper_database_rep"></p>
        </div>
        <div class="col-md-12">
            <h6>Abstract</h6>
            <p id="paper_abstract_rep"></p>
        </div>
        <div class="col-md-12">
            <h6>Keywords</h6>
            <p id="paper_keywords_rep"></p>
        </div>
    </div>
{% endblock %}
